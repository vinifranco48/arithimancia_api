{
  "name": "arithimancia-api",
  "version": "1.0.0",
  "description": "API backend para RPG de texto Arithimancia - Sistema de personagens e combate",
  "main": "server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon",
    "build": "tsc && npm run swagger:generate",
    "swagger:generate": "npx ts-node scripts/generate-swagger.ts",
    "test": "jest --run",
    "test:watch": "jest --watch",
    "validate": "npx ts-node scripts/validate-requirements.ts",
    "db:seed": "npx ts-node prisma/seed.ts",
    "db:reset": "npx prisma migrate reset --force && npm run db:seed",
    "db:migrate": "npx prisma migrate deploy",
    "db:generate": "npx prisma generate",
    "serverless": "serverless offline",
    "sls:offline": "npm run build && serverless offline",
    "docker:build": "npm run build && docker build -f Dockerfile.lambda -t arithimancia-api:latest .",
    "docker:test": "docker run -p 9000:8080 arithimancia-api:latest",
    "sls:deploy": "npm run build && serverless deploy",
    "sls:deploy:prod": "npm run build && serverless deploy --stage prod",
    "sls:remove": "serverless remove",
    "sls:logs": "serverless logs -f api -t",
    "sls:info": "serverless info"
  },
  "keywords": [
    "rpg",
    "api",
    "express",
    "nodejs",
    "mysql",
    "characters"
  ],
  "author": "Vinicius",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "@types/compression": "^1.8.1",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "bcrypt": "^6.0.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "serverless-http": "^4.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.0.4",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@serverless/typescript": "^4.20.2",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.4",
    "@types/express-rate-limit": "^5.1.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.9.1",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "prisma": "^6.17.1",
    "serverless": "^3.40.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-esbuild": "^1.55.1",
    "serverless-offline": "^14.4.0",
    "serverless-plugin-layer-manager": "^1.1.1",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vinifranco48/arithimancia_api.git"
  },
  "bugs": {
    "url": "https://github.com/vinifranco48/arithimancia_api/issues"
  },
  "homepage": "https://github.com/vinifranco48/arithimancia_api#readme"
}
